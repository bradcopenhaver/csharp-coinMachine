<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Change Machine</title>
  </head>
  <body>
    <div class="container">
      <h1>Change Machine</h1>
      <h4>Enter a number of cents, and I'll make the appropriate change in coins</h4>
      <form action="/results" method="post">
        <div class="form-group">
          <label for="number">How many cents?</label>
          <input type="number" name="number">
        </div>
        <button type="submit" class="btn">Results</button>
      </form>
      @if (@Model != null)
      {
        <div class="results">
        <p>Total cents: @Model.GetTotal()</p>
        <p>Quarters: @Model.GetQuarters()</p>
        <p>Dimes: @Model.GetDimes()</p>
        <p>Nickels: @Model.GetNickels()</p>
        <p>Pennies: @Model.GetPennies()</p>
        </div>
      }
    </div>
  </body>
</html>
